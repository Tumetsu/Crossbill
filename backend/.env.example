# Database
# PostgreSQL (recommended for production)
DATABASE_URL=postgresql://crossbill:crossbill_dev_password@localhost:5432/crossbill

# SQLite (for local development without Docker)
# DATABASE_URL=sqlite:///./crossbill.db

# Generate secret key:
# openssl rand -hex 32
SECRET_KEY=123

# PostgreSQL password for docker-compose (production)
# CHANGE THIS IN PRODUCTION!
POSTGRES_PASSWORD=crossbill_secure_password

# Environment
ENVIRONMENT=development

# Port (for docker-compose)
PORT=8000

# CORS - Allow requests from these origins (comma-separated)
# Use "*" to allow all origins (default, useful for desktop apps like Obsidian)
# CORS_ORIGINS=*
# Or specify specific origins:
# CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8000

# Admin setup (for first-time initialization)
# If ADMIN_PASSWORD is set and the admin user has no password, the password will be hashed and saved on startup
# ADMIN_USERNAME=admin
# ADMIN_PASSWORD=your_secure_password_here

ACCESS_TOKEN_EXPIRE_MINUTES=30
